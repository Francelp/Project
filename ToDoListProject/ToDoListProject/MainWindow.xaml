<Window x:Class="ToDoListProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To Do List" Height="300" Width="525">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
      </Grid.ColumnDefinitions>
    <TextBlock Name="ToDoListBlock" Grid.Column="0" Height="200" Margin="10,10,10,10"/>
    <Button Name="AddButton" Content="Add"  VerticalAlignment="Top"  Width="80" Height="50" Grid.Column="1" Margin=" 10,10,10,10"/>
    <Button Name="RemoveButton" Content="Remove"  VerticalAlignment="Top" Width="80" Height="50" Grid.Column="1" Margin="10,70,10,10"/>
    <Button Name="EditButton" Content="Edit" VerticalAlignment="Bottom" Width ="80" Height="50" Grid.Column="1" Margin="10,10,10,70"/>
    <Button Name="CompletedButton" Content="Completed?" VerticalAlignment="Bottom" Width="80" Height="50" Grid.Column="1" Margin="10,10,10,10"/>
  </Grid>
</Window>
